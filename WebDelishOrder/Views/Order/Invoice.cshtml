@model WebDelishOrder.Models.Order
@{
    ViewData["PageTitle"] = "Hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">Hóa đơn</h2>
        </div>
        <div class="card-body">
            <p><strong>Mã đơn hàng:</strong> @Model.Id</p>
            <p><strong>Khách hàng:</strong> @ViewBag.CustomerName</p>
            <p><strong>Địa chỉ:</strong> @Model.ShippingAddress</p>
            <p><strong>Số điện thoại: </strong>@Model.Phone</p>
            <p><strong>Thời gian đặt hàng:</strong> @Model.RegTime.Value.ToString("dd/MM/yyyy HH:mm")</p>

            <table class="table table-bordered mt-4">
                <thead class="thead-light">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td>@(item.Product?.Name ?? "Không xác định")</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                            <td>@(item.Quantity * item.Price)</td>
                        </tr>
                    }
                </tbody>
            </table>

            <p class="text-right mt-3">
                <strong>Tổng tiền:</strong>
                <span class="text-danger font-weight-bold">@Model.TotalPrice</span>
            </p>
        </div>
    </div>
</div>